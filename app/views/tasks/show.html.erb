<h1><%= @task.title %></h1>
<div class="description">
  <h2><%= @task.details %></h2>
</div>

<% if @task.completed == true %>
  <input type="checkbox" checked disabled>This task is completed</input>
<% else %>
  <input type="checkbox" disabled>This tasks is not completed yet </input>
<% end %>

<p><%= link_to "edit task", edit_task_path %></p>
<p><%= link_to "Back to list", tasks_path %></p>
